<%- include("partials/header.ejs") %>
<body>
  <%- include("partials/navbar.ejs") %>
  
  <div class="container">
    <hr>
    <div class="card">
      <div class="card-body">
        <h1 class="float-left font-weight-bold font-italic">Perguntas</h1>
        <a href="/perguntar" class="btn btn-primary float-md-right">Realizar Pergunta</a>
      </div>
    </div>
    <hr>
    <% perguntas.forEach(pergunta => { %>
      <br>
        <div class="card">
          <div class="card-body">
            <h3 class="font-italic"><%= pergunta.titulo%></h3>
            <p><%= pergunta.descricao%></p>
          </div>
          <div class="card-footer">
            <!--rota dinÃ¢mica-->
            <a href="/pergunta/<%=pergunta.id%>"><button class="btn btn-primary">Responder</button></a>
          </div>
        </div>
        
        
        <hr>
    <% }) %>
  </div>

</body>
