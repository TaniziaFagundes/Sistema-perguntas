<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <div id="pergunta-color">
            <h3 class="font-italic"><%= pergunta.titulo %></h3>
            <p><%= pergunta.descricao%></p>
        </div>
        <hr>
        <form method="POST" action="/responder">
            <br>
            <h3>Responder</h3>
            <textarea class="form-control" name="corpo" id="" placeholder="Digite sua resposta"></textarea><br>
            <input type="hidden" name="pergunta" id="" value="<%=pergunta.id%>">  <!--hidden == escondido-->
            <button type="submit" class="btn btn-primary">Responder</button>
            <br>
            <br>
        </form>
        <hr>
        <h3>Respostas Anteriores</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include("partials/footer.ejs") %>